<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu_page"
    tools:context=".ui.menu.MenuActivity">

    <TextView
        android:id="@+id/tv_title_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="HI Namamu Pilih Lawanmu"
        android:textAllCaps="true"
        android:elegantTextHeight="true"
        android:textColor="@color/primary_color_variant"
        android:textSize="@dimen/_16ssp"
        android:lineHeight="@dimen/_22ssp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/gotham_font"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_menu_option" />

    <LinearLayout
        android:id="@+id/ll_menu_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_title_menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/fl_menu_player_vs_com"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_player_player"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_110sdp"
                android:src="@drawable/ic_menu_player_vs_com" />


        </FrameLayout>

        <TextView
            android:id="@+id/tv_title_player_vs_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Player VS COM"
            android:fontFamily="@font/gotham_font"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/fl_menu_player_vs_com"
            app:layout_constraintLeft_toLeftOf="@+id/fl_menu_player_vs_com"
            app:layout_constraintRight_toRightOf="@+id/fl_menu_player_vs_com"
            app:layout_constraintBottom_toTopOf="@+id/fl_menu_player_vs_com"
            />



        <FrameLayout
            android:id="@+id/fl_menu_player_vs_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp">

            <ImageView
                android:id="@+id/iv_player_com"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_110sdp"
                android:src="@drawable/ic_menu_player_vs_player" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_title_player_vs_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Player VS Player"
            android:fontFamily="@font/gotham_font"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/fl_menu_player_vs_player"
            app:layout_constraintLeft_toLeftOf="@+id/fl_menu_player_vs_player"
            app:layout_constraintRight_toRightOf="@+id/fl_menu_player_vs_player"
            app:layout_constraintBottom_toBottomOf="parent" />


    </LinearLayout>



  </androidx.constraintlayout.widget.ConstraintLayout>