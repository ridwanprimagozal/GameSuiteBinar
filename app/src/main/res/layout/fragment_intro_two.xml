<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_intro_two"
    tools:context=".ui.intro.IntroTwoFragment">

    <ImageView
        android:id="@+id/iv_icon_ilustration_intro_two"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_220sdp"
        android:src="@drawable/ic_intro_two"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"/>


    <TextView
        android:id="@+id/tv_title_intro_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_title_intro_two"
        android:textColor="@color/black"
        android:fontFamily="@font/pixelated_font"
        android:textSize="@dimen/_26sdp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon_ilustration_intro_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_desc_intro_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_desc_intro_two"
        android:fontFamily="@font/gotham_font"
        android:textColor="@color/gray"
        android:textSize="@dimen/_16sdp"
        android:textAlignment="center"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_intro_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>